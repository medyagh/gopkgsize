<head>
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="text/javascript">
      google.charts.load("current", {packages:["corechart"]});
      google.charts.setOnLoadCallback(drawChart);

    function drawChart() {

      var data = google.visualization.arrayToDataTable([
        ['Name', 'Files', 'Imports', 'Top', 'LoC'],
        {{ range .Packages }}
        ['{{.Base}}', {{.Files}}, {{.Imports}}, '{{.Top}}', {{.Lines}}],
        {{- end }}
      ]);

      var options = {
        title: 'Correlation between number of imports, file count ' +
               'and line count of Go packages',
        hAxis: {
          title: 'Files',
          logScale: true,
          gridlines: {
            count: 0,
          },
          viewWindow: {
            min: 0.8,
            max: 80,
          },
        },
        vAxis: {
          title: 'Imports',
          logScale: true,
          gridlines: {
            count: 0,
          },
          viewWindow: {
            min: -1,
          },
        },
        bubble: {
          textStyle: {
            auraColor: 'none',
          },
        },
        sizeAxis: {
          maxSize: 85,
        },
      };

      var chart = new google.visualization.BubbleChart(document.getElementById('noAura'));

      chart.draw(data, options);
    }
  </script>
</head>
<body>
  <div id="noAura" style="width: 1280px; height: 800px;"></div>
</body>
</html>